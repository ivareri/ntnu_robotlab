<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="floor" default="true"/>
  <arg name="gantry" default="true"/>

  <!-- Floor robot stuff -->
  <group ns="floor" if="$(arg floor)">
    <!-- Do remapping to fit ros industrial namespace -->
    <remap from="position_trajectory_controller/follow_joint_trajectory" to="joint_trajectory_action"/>
    <remap from="position_trajectory_controller/state" to="feedback_states"/>
    <remap from="position_trajectory_controller/command" to="joint_path_command"/>

    <!-- load controller parameters -->
    <rosparam file="$(find robotlab_support)/config/floor/rsi_params.yaml" command="load" />
    <!-- start controller-->
    <node name="kuka_hardware_interface_rsi" pkg="kuka_rsi_hw_interface" type="kuka_hardware_interface_node" respawn="false" output="screen" required="true" />
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find robotlab_support)/config/floor/hardware_controllers.yaml" command="load"/>
    <rosparam file="$(find robotlab_support)/config/floor/ftc_controller.yaml" command="load"/>
    <!-- Load floor controller joint names from YAML file to parameter server -->
    <rosparam file="$(find robotlab_support)/config/floor/controller_joint_names.yaml" command="load"/>
    <!-- Load controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="force_torque_sensor_controller position_trajectory_controller joint_state_controller --shutdown-timeout 1"/>
  </group>

  <!-- Gantry robot stuff -->
  <group ns="gantry" if="$(arg gantry)">
    <!-- Do remapping to fit ros industrial namespace -->
    <remap from="position_trajectory_controller/follow_joint_trajectory" to="joint_trajectory_action"/>
    <remap from="position_trajectory_controller/state" to="feedback_states"/>
    <remap from="position_trajectory_controller/command" to="joint_path_command"/>

    <!-- load controller parameters -->
    <rosparam file="$(find robotlab_support)/config/gantry/rsi_params.yaml" command="load" />
    <!-- Start controller -->
    <node name="kuka_hardware_interface_rsi" pkg="kuka_rsi_hw_interface" type="kuka_hardware_interface_node" respawn="false" output="screen" required="true"/>
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find robotlab_support)/config/gantry/hardware_controllers.yaml" command="load"/>
    <rosparam file="$(find robotlab_support)/config/gantry/ftc_controller.yaml" command="load"/>
    <!-- Load controller joint names from YAML file to parameter server -->
    <rosparam file="$(find robotlab_support)/config/gantry/controller_joint_names.yaml" command="load"/>
    <!-- Load controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="force_torque_sensor_controller position_trajectory_controller joint_state_controller --shutdown-timeout 1"/>
  </group>
</launch>
